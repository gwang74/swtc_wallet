<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_import"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="解析KeyStore" />

        <EditText
            android:id="@+id/edt_data"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp" />

        <Button
            android:id="@+id/btn_qr"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/edt_data"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/edt_data"
            android:text="commit" />

        <ImageView
            android:id="@+id/img_qr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_data"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_qr"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/btn_cp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_data"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="copy" />
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>